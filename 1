#include <iostream>
using namespace std;

int* CAR(int* arr, int size_A) {
    for (int i = 0; i < size_A; i++) {
        arr[i] = rand() % 10;
    }
    return arr;

}


void arryviwe(int* arr, int size_A) {
    for (int i = 0; i < size_A; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
}


void vivearr(int** arr, int rows, int n) {
    cout << endl;
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < n;j++) {
            cout << arr[i][j] << " ";
        }
        cout << endl;
    }
}


int main()
{
    int size, sort;
    size = 20;

    int* array = new int[size];
    CAR(array, size);
    arryviwe(array, size);

    int okey = size / 2;
    int* up = new int[okey];

    for (int i = 0; i < okey; i++) {
        int x = 0;
        for (int j = 0; j < size; j++) {
            if (i == array[j]) {
                x = x + 1;
            }

        }
        up[i] = x;
    }
    

    int rows = 0;
    for (int i = 0; i < okey ; i++) {
        if (rows < up[i]) {
            rows = up[i];
        }
    }

    int n = okey;


    int** arr = new int* [rows];

    for (int i = 0; i < rows;i++) {
        arr[i] = new int[n];
    }


    for (int i = 3; i > -1; i--) {
        for (int j = 0; j < n; j++) {
            arr[i][j] = 0;

        }

    }

    int j = 0;
    for (int x = 0; x < 10; x++) {
        int k = up[x];
        int i = 3;
        for (int z = k;z > 0; z--) {
            arr[i][j] = 1;
            i--;
            
        }  
        j++;
    }

    cout << endl;
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < n;j++) {
            if (arr[i][j] == 0) {
                cout << "  ";
            }
            else {
                cout << "* ";
            }
        }
        cout<<" " << endl;
    }
    for (int i = 0; i < 10; i++) {
        cout << i<< " ";
    }

    cout << endl;
}
